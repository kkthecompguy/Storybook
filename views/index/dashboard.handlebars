<h2>Welcome {{user.firstName}}</h2>
<p>Your Stories</p>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
        <tr>
          <td><a href="/stories/show/{{id}}">{{title}}</a></td>
          <td>{{formateDate date 'MMMM Do YYYY'}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a href="/stories/edit/{{id}}" class="btn left-align mbt"><i class="fa fa-pencil-alt"></i>Edit</a>
            <form action="/stories/{{id}}?_method=DELETE" method="POST" id="delete-form">
            <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn red mbt"><i class="fas fa-trash-alt"></i> Delete</button>
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>You have not created any stories yet</p>
{{/if}}